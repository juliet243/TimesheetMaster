<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <ImageView
            android:id="@+id/leftSidePanel"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:background="@color/darkred"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/topLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="67dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/leftSidePanel"
            android:text="Timesheet"
            android:textColor="@color/darkred"
            android:fontFamily="@font/gvtime"
            android:textSize="23dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/topLabel"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="-2dp"
            android:layout_toEndOf="@id/leftSidePanel"
            android:text="Master"
            android:textColor="@color/darkred"
            android:fontFamily="@font/gvtime"
            android:textSize="23dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_high_opacity"/>

        <ImageView
            android:id="@+id/rightSidePanel"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:background="@color/darkred"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</RelativeLayout>